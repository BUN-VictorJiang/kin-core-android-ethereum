<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="kin.sdk.core.sample.WalletActivity">


    <TextView
        style="@style/kinText.Title.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getPublicAddress:"/>

    <TextView
        android:id="@+id/public_key"
        style="@style/kinText.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textIsSelectable="true"
        tools:text="public key"/>

    <Button
        android:id="@+id/export_key_store_btn"
        style="@style/KinButtonStyle.TestNet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/export_key_store"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/grey"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/refresh_btn"
            style="@style/KinButtonStyle.TestNet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:text="@string/refresh"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/kinText.Title.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="getBalance:"/>

            <ProgressBar
                android:id="@+id/balance_progress"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom"
                android:visibility="gone"/>
        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/balance"
        style="@style/kinText.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="left"
        tools:text="123.0"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/kinText.Title.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center|left"
            android:text="getPendingBalance:"/>

        <ProgressBar
            android:id="@+id/pending_balance_progress"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="bottom"
            android:visibility="gone"/>
    </LinearLayout>


    <TextView
        android:id="@+id/pending_balance"
        style="@style/kinText.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:text="555.5"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/send_transaction_btn"
        style="@style/KinButtonStyle.TestNet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_transaction"/>

    <Button
        android:id="@+id/get_kin_btn"
        style="@style/KinButtonStyle.TestNet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:enabled="false"
        android:text="@string/get_kin"/>

</LinearLayout>
